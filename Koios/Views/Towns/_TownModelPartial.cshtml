@model TownDto
<div class="modal fade" id="addTown">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addTownLabel">Add Town</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="CreateTown" method="post">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
                    <div class="form-group">
                        <label class="text-danger">Field with * is required</label>
                    </div>
                    <div class="form-group">
                        <label>Country</label><label class="text-danger"> *</label>
                        @Html.DropDownListFor(Model => Model.CountryId, new SelectList(ViewBag.TotalCountries, "CountryId", "CountryName"), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Town Name</label><label class="text-danger"> *</label>
                        <input asp-for="TownName" placeholder="Zagreb" class="form-control" required />
                        <span id="nonUnique" style="margin-top:5px !important;" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Postal Code</label><label class="text-danger"> *</label>
                        <input asp-for="PostalCode" placeholder="10000" class="form-control" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-save="modal">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>